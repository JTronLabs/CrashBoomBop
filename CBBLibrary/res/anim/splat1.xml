<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
  android:interpolator="@android:anim/linear_interpolator">
  <alpha
      android:fromAlpha="0.01"
      android:toAlpha="1.0"
      android:duration="50"
      />
  
  <translate 
      android:startOffset="00"
      android:fromXDelta="0%" android:toXDelta="20%" 
      android:fromYDelta="-20%" android:toYDelta="00%" 
      
      android:duration="100">
   	</translate>
   	
    <translate
      android:startOffset="100"
      android:fromXDelta="20%" android:toXDelta="-20%" 
      android:fromYDelta="0%" android:toYDelta="20%" 
      
      android:duration="100">
   	</translate>
   	
    <translate 
      android:startOffset="200"
      android:fromXDelta="-20%" android:toXDelta="0%" 
      android:fromYDelta="20%" android:toYDelta="00%" 
      
      android:duration="100">
   	</translate>
   	
   	<rotate
   	    android:startOffset="000"
       	android:fromDegrees="0"
       	android:toDegrees="90"
       	android:pivotX="50%"
       	android:pivotY="50%"       	android:duration="150"/> 
   	<rotate
	    android:startOffset="150"
	   	android:fromDegrees="90"
	   	android:toDegrees="-120"
	   	android:pivotX="50%"
	   	android:pivotY="50%"       	android:duration="150"/> 
       	
   	<scale 
       android:startOffset="000"
      android:fromXScale="1.0"     android:toXScale="1.5"
      android:fromYScale="1.0"      android:toYScale="0.666"
      android:duration="100"
      android:pivotX="50%"      android:pivotY="50%" >
   </scale>
   
    <scale 
        android:startOffset="100"
      android:fromXScale="1.0"      android:toXScale="0.666"
      android:fromYScale="1.0"      android:toYScale="1.5"
      android:duration="100"
      android:pivotX="50%"      android:pivotY="50%" >
   </scale>
   
    <scale 
        android:startOffset="200"
      android:fromXScale="1.0"      android:toXScale="1.5"
      android:fromYScale="1.0"      android:toYScale="0.666"
      android:duration="100"
      android:pivotX="50%"      android:pivotY="50%" >
   </scale>
</set>